# top-most EditorConfig file
root = true

# Global settings
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# C# files
[*.cs]
# Language version and features are controlled by the project; keep code style consistent
# Formatting
csharp_new_line_before_open_brace = all
csharp_new_line_between_members = true
csharp_indent_case_contents = true
csharp_indent_switch_labels = true
csharp_indent_block_contents = true
csharp_indent_labels = flush_left

# Naming
dotnet_naming_rule.private_fields_should_be_camel_case.severity = suggestion
dotnet_naming_rule.private_fields_should_be_camel_case.symbols = private_fields
dotnet_naming_rule.private_fields_should_be_camel_case.style = camel_case_underscore

dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_symbols.private_fields.applicable_accessibilities = private
dotnet_naming_symbols.private_fields.required_modifiers = readonly

dotnet_naming_style.camel_case_underscore.capitalization = camel_case
dotnet_naming_style.camel_case_underscore.required_prefix = _

# Code style
csharp_style_var_for_built_in_types = false:warning
csharp_style_var_when_type_is_apparent = false:warning
csharp_style_var_elsewhere = false:warning

csharp_style_expression_bodied_methods = when_on_single_line:suggestion
csharp_style_expression_bodied_properties = when_on_single_line:suggestion
csharp_style_expression_bodied_ctors = when_on_single_line:suggestion

csharp_style_namespace_declarations = file_scoped:suggestion
csharp_prefer_braces = true:suggestion
csharp_style_prefer_switch_expression = true:suggestion

# Nullable
dotnet_style_require_accessibility_modifiers = for_non_interface_members:suggestion
dotnet_style_nullable_enable = true

# Using directives
dotnet_sort_system_directives_first = true
file_header_template = unset

# .editorconfig-specific for markdown and json
[*.md]
trim_trailing_whitespace = false
insert_final_newline = true
end_of_line = lf
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

# XML files
[*.xml]
indent_style = space
indent_size = 2
